{
  "scripts": {
    "build": "webpack -p",
    "start": "webpack-dev-server",
    "pretest": "yarn lint && tsc --project .",
    "test": "jest",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "deploy": "yarn build && gh-pages -d dist"
  },
  "dependencies": {
    "awesome-typescript-loader": "^5.1.0",
    "clean-webpack-plugin": "^0.1.19",
    "gh-pages": "^1.2.0",
    "html-webpack-plugin": "^3.2.0",
    "js-to-ts-converter": "^0.16.3",
    "webpack-log": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "23.1.4",
    "@types/node": "10.5.2",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.2.0",
    "copy-webpack-plugin": "4.5.1",
    "husky": "1.1.2",
    "jest": "23.3.0",
    "source-map-loader": "^0.2.3",
    "tile-extruder": "^1.1.0",
    "ts-jest": "23.0.0",
    "tslint": "5.11.0",
    "tslint-eslint-rules": "5.3.1",
    "typescript": "3.0.1",
    "webpack": "^4.10.2",
    "webpack-cli": "3.0.2",
    "webpack-dev-server": "^3.2.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "json",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/tests/**/*.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn test"
    }
  }
}
